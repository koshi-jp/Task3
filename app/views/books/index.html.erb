<main>
  <div class="container">
  <div class="row">
    <%= render 'users/left', book: @book, user: @user %>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @books.each do |book| %>
         <tr>
          <td><%= attachment_image_tag book(@user_id), :profile_image, :fill, 30, 30, fallback: "no_image.jpg", size:'30x30' %></td>
          <td><%= link_to book.title, book_path(book) %></td>
          <td><%= book.body %></td>
         </tr>
        <% end %>
      </tbody>
     </table>
    </div>
    </div>
  </div>
</main>