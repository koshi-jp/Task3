<main>
  <div class="container">
  <div class="row">
    <%= render 'users/left', user: current_user, book: @book %>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @books.each do |book| %>
         <tr>
          <td></td>
          <td><%= link_to book.title, book_path(book) %></td>
          <td><%= book.body %></td>
          <td><%= link_to 'Edit', root_path,class: "btn btn-small btn-success" %></td>
          <td><%= link_to 'Destroy', book_path(book),method: :delete,class: "btn btn-small btn-danger", "data-confirm" => "本当に削除しますか？" %></td>
         </tr>

        <% end %>
      </tbody>
     </table>
    </div>
    </div>
  </div>
</main>