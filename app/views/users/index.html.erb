<main>
  <div class="container">
  <div class="row">
    <%= render 'users/left', user: current_user, book: @book %>
    <div class='col-md-8 offset-md-1'>
      <h2>Users</h2>
      <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th></th>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
         <tr>
          <td></td>
          <td><%= attachment_image_tag user.profile_image, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></td>
          <td><%= user.name %></td>
          
         </tr>

        <% end %>
      </tbody>
     </table>
    </div>
    </div>
  </div>
</main>