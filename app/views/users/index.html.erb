<main>
  <div class="container">
  <div class="row">
    <%= render 'users/left', user: current_user, book: @book %>
    <div class='col-md-8 offset-md-1'>
      <h2>Users</h2>
      <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th></th>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
         <tr>
          <td></td>
          <td><%= attachment_image_tag user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg", size:'30x30' %></td>
          <td><%= user.name %></td>
          <td></td>
          <td><%= link_to 'show', user_path(user) %></td>

         </tr>

        <% end %>
      </tbody>
     </table>
    </div>
    </div>
  </div>
</main>