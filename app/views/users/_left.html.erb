<body>
  <main>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-xs-3'>
        <h2>User info</h2>
          <table class='table'>
            <tr>
              <%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"%>
            </tr>
            <tr>
	            <th>name</th>
	            <th><%= user.name %></th>
            </tr>
            <tr>
	           <th>introduction</th>
	           <th><%= user.introduction %></th>
            </tr>
          </table>

            <div class='row'>
               <% if @user.id = current_user.id %>
                 <%= link_to edit_user_path(@user)do %> <i class= "fas fa-user-cog btn btn-outline-secondary btn-block"></i>
                 <% end %>
               <% end %>
            </div>

           <h1>New book</h1>
           <%= form_with model:book, local:true do |f| %>
           <h4>Title</h4>
           <%= f.text_field :title %>
           <h4>Opinion</h4>
           <%= f.text_field :body %><br>
           <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
           <% end %>
        </div>
      </div>
     </div>
   </main>
  </body>